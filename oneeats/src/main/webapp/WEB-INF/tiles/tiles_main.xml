<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	<definition name="mainLayout"
		template="/WEB-INF/views/common/layout_main.jsp">
		<put-attribute name="title" value="레이아웃 페이지" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="side" value="/WEB-INF/views/common/side.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>
	
	
	<definition name="nosidebarLayout"
	template="/WEB-INF/views/common/layout_nosidebar.jsp">
	<put-attribute name="title" value="사이드바 없는 레이아웃" />
	<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>

	<definition name="/home" extends="mainLayout">
		<put-attribute name="title" value="쇼핑몰 메인페이지" />
		<put-attribute name="body" value="/WEB-INF/views/home.jsp" />
	</definition>
	<definition name="/loginForm" extends="nosidebarLayout">
		<put-attribute name="title" value="쇼핑몰 로그인페이지" />
		<put-attribute name="body" value="/WEB-INF/views/member/loginForm.jsp" />
	</definition>
</tiles-definitions>


