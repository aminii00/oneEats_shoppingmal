		<insert id="insertNewGoods" parameterType="goodsVO">
		insert goods (category,name,price,rapping,manufacturer,weight,harvest,type,memberNo) values(#{category},#{name},#{price},#{rapping},#{manufacturer},#{weight},#{harvest},#{type},#{memberNo})			
		</insert>
	
	
		<select id="selectNewGoodsNo" resultType="int" >
		select ifnull(max(goodsNo),0)+1 from goods
		</select>
		
		
		
		<insert id="insertOptions" parameterType="java.util.List" >
		insert into `option`(optionNo,name,option_qty,price,goodsNo)
		values
		<foreach collection="list" item="i" index="index" separator=",">
			(#{i.optionNo}, #{i.name}, #{i.option_qty},#{i.price},#{i.goodsNo})
		</foreach>
		</insert>
		
		
		
		<insert id="insertNewGoodsWithMap" parameterType="java.util.Map" >
		insert into goods (category,name,price,rapping,manufacturer,weight,harvest,type,memberNo)
		values(#{category},#{name},#{price},#{rapping},#{manufacturer},#{weight},#{harvest},#{type},#{memberNo})	
	
	</insert>
	
	
	
	
</mapper>