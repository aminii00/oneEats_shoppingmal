	<select id="selectOrderByOrderNo" resultMap="OrderResult"
		parameterType="int">
		<![CDATA[
			select t_order.*, goodsAndHotdealView.name as goodsName, goodsAndHotdealView.img1 as goodsImg, goodsAndHotdealView.price as goodsPrice, goodsAndHotdealView.weight as weight from t_order inner join goodsAndHotdealView on t_order.goodsNo=goodsAndHotdealView.goodsNo
			where t_order.orderNo=#{orderNo}
		]]>
	</select>

